<link type="text/css" rel="stylesheet" href="/bootstrap/css/login.css">

<div id="bg"></div>

<div class="col-lg-offset-2 col-md-8">
 <div class="form-head"> 
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <div style="height: 20px;"></div>
     <h1 class="text-center">Sign up Form</h1>
  <%= devise_error_messages! %>     
    
    <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true,class:"form-control" %>
  </div>
            
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,class:"form-control"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation,class:"form-control" , autocomplete: "off" %>
  </div>
  
   <div class="field col-md-10">
    <%= f.label :date_of_birth %><br/>
    <%= f.date_field :date_of_birth,"data-provide" => 'datepicker',class:"form-control"  %>
  </div>
     
  
   <div class="field">
    <%= f.label :gender ,class:"col-md-4"%><br/>
    <%= f.text_field :gender, class:"form-control"  %>
  </div>
  
  <div class="field">
    <%= f.label :profile_picture %><br>
    <%= f.file_field :profile_picture %><br />
  </div>
  
  <div class="actions col-md-offset-1">
    <%= f.submit "Sign up" %><br /><br /><br />
  </div>
     <%#*<div class="col-md-4 "></div>%>
<% end %>
   
</div>
</div>
<style>
    #bg {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: url(/assets/images/sign_up3.jpeg) no-repeat center center fixed;
        background-size: cover;
        -webkit-filter: blur(5px);    
    }
    form{
        background-color: rgba(255,255,255,0.5);
    }
    .forms input{
        background-color: #777777;
    }
    .field{
      padding: 20px;
    }
</style>
<%= render "devise/shared/links" %>